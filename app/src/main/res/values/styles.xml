<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="HNTheme" parent="android:Theme.Holo.Light.DarkActionBar">
    <item name="android:actionBarStyle">@style/HNActionBar</item>
    <item name="android:windowBackground">@color/app_background</item>
  </style>

  <style name="HNActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid">
    <item name="android:background">@color/action_bar_background</item>
    <item name="android:titleTextStyle">@style/HNActionBarText</item>
  </style>

  <style name="HNActionBarText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
    <item name="android:textColor">@android:color/white</item>
    <item name="android:shadowColor">#141414</item>
    <item name="android:shadowDx">1</item>
    <item name="android:shadowDy">1</item>
    <item name="android:shadowRadius">1</item>
  </style>

  <style name="HNTheme.NewsDetails">
    <item name="android:windowActionBarOverlay">true</item>
    <item name="android:actionBarStyle">@style/HNActionBar.Transparent</item>
    <item name="android:windowContentOverlay">@null</item>
  </style>

  <style name="HNActionBar.Transparent">
    <item name="android:background">@android:color/transparent</item>
  </style>
</resources>